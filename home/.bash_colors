#!/bin/bash

CLR_RST=$(tput sgr0)

FG_BLACK=$(tput setaf 0)
FG_RED=$(tput setaf 1)
FG_GREEN=$(tput setaf 2)
FG_BROWN=$(tput setaf 3)
FG_BLUE=$(tput setaf 4)
FG_MAGENTA=$(tput setaf 5)
FG_CYAN=$(tput setaf 6)
FG_WHITE=$(tput setaf 7)

BG_BLACK=$(tput setab 0)
BG_BLUE=$(tput setab 1)
BG_GREEN=$(tput setab 2)
BG_CYAN=$(tput setab 3)
BG_RED=$(tput setab 4)
BG_MAGENTA=$(tput setab 5)
BG_BROWN=$(tput setab 6)
BG_WHITE=$(tput setab 7)

function _clr() {
  clr=$1; shift
  echo "${!clr}$@${CLR_RST}"
}

function clr_black           { _clr FG_BLACK $@; }
function clr_red             { _clr FG_RED $@; }
function clr_green           { _clr FG_GREEN $@; }
function clr_brown           { _clr FG_BROWN $@; }
function clr_blue            { _clr FG_BLUE $@; }
function clr_magenta         { _clr FG_MAGENTA $@; }
function clr_cyan            { _clr FG_CYAN $@; }
function clr_white           { _clr FG_WHITE $@; }

function clr_blackb          { _clr BG_BLACK $@; }
function clr_redb            { _clr BG_RED $@; }
function clr_greenb          { _clr BG_GREEN $@; }
function clr_brownb          { _clr BG_BROWN $@; }
function clr_blueb           { _clr BG_BLUE $@; }
function clr_magentab        { _clr BG_MAGENTA $@; }
function clr_cyanb           { _clr BG_CYAN $@; }
function clr_whiteb          { _clr BG_WHITE $@; }

