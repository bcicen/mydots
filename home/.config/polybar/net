;

[colors]
background = #363737
foreground = #dfdfdf
foreground-alt = #c2fff9
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[pbars]
empty = "○ "
fill = "● "
width = 10
indicator = "● "

[bar/net]
monitor = ${env:MONITOR:eDP-1}
width = 31.9%
height = 60
offset-x = 39.2%
offset-y = 0.1%
radius = 2.0
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 2
padding-right = 2

border-bottom-size = 1
border-color = ${colors.background}

font-0 = "GE Inspira:pixelsize=22;2"
font-1 = "Symbola:pixelsize=25;0"
font-2 = "Symbola:pixelsize=30;2"

modules-left = tele
modules-center = lip sp wip sp tcpconn sp netrate

[module/sp]
type = custom/script
interval = 86400
exec = echo " "
;format-underline = #e3ecf2
format-margin = 2

[module/tele]
type = custom/script
exec = echo " "
format-prefix = "✆"
format-prefix-foreground = ${colors.foreground-alt}
interval = 86400
format-prefix-font = 3
;label-padding-right = 3

[module/vpn]
type = custom/script
exec = pgrep -x openvpn > /dev/null && echo " "
format-prefix = "🔒  "
format-prefix-foreground = #4bffdc
interval = 5
label-font = 2

[module/lip]
type = custom/script
exec = ~/.config/polybar/bin/ip.sh lip wlp0s20f3
format-prefix = "LIP "
format-prefix-foreground = ${colors.foreground-alt}
interval = 30
label-font = 0

[module/wip]
type = custom/script
exec = ~/.config/polybar/bin/ip.sh wip wlp0s20f3
format-prefix = "WIP "
format-prefix-foreground = ${colors.foreground-alt}
interval = 90
label-font = 0

[module/dns]
type = custom/script
exec = ~/.config/polybar/bin/ip.sh dns wlp0s20f3
format-prefix = "DNS "
format-prefix-foreground = ${colors.foreground-alt}
interval = 20
label-font = 0

[module/tcpconn]
type = custom/script
exec = wc -l /proc/net/tcp | awk '{print $1}'
format-prefix = "CONN "
format-prefix-foreground = ${colors.foreground-alt}
interval = 10

[module/netrate]
type = custom/script
exec = ~/.config/polybar/bin/net.sh wlp0s20f3 2
tail = true
label-margin-right = 3

[settings]
;format-margin = 2
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
