[colors]
;background = #ee283139
;background = #ee3d4b57
background = #363737
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
foreground-alt2 = #c2fff9
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[pbars]
empty = "‚óã "
fill = "‚óè "
width = 10
indicator = "‚óè "

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 40
;offset-x = 1%
;offset-y = 1%
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 2
padding-right = 2

border-bottom-size = 1
border-color = ${colors.background}

font-0 = fixed:pixelsize=12;1
font-1 = "GE Inspira:pixelsize=14;1"
font-2 = "Symbola:pixelsize=25;2"
font-3 = "Symbola:pixelsize=10;2"
font-4 = "Symbola:pixelsize=21;2"

modules-left = life cpu sp memory sp wifi wifibar sp battery sp temp tempbar
modules-right = pulseaudio sp date daybar

tray-position = right
tray-padding = 2
tray-detached = false
tray-maxsize = 20

;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/net]
;monitor = ${env:MONITOR:HDMI-1}
width = 40%
height = 40
offset-x = 0.5%
offset-y = 2.9%
radius = 4.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 1
border-color = #00000000

padding-left = 4
padding-right = 2

font-0 = "GE Inspira:pixelsize=14;1"
font-1 = "Symbola:pixelsize=15;0"
font-2 = "Symbola:pixelsize=20;2"

modules-left = globe lip sp wip sp dns sp tcpconn sp netrx nettx

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/cpu]
type = internal/cpu
interval = 1
format = <label> | <bar-load>
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%
label-font = 2

bar-load-empty = ${pbars.empty}
bar-load-fill = ${pbars.fill}
bar-load-width = ${pbars.width}
bar-load-indicator = ${pbars.indicator}

bar-load-empty-font = 4
bar-load-fill-font = 4
bar-load-width-font = 4
bar-load-indicator-font = 4

[module/memory]
type = internal/memory
interval = 1
format-underline = #4bffdc
label = %percentage_used%
label-font = 2
format = <label> | <bar-used>

bar-used-empty = ${pbars.empty}
bar-used-fill = ${pbars.fill}
bar-used-width = ${pbars.width}
bar-used-indicator = ${pbars.indicator}

bar-used-empty-font = 4
bar-used-fill-font = 4
bar-used-width-font = 4
bar-used-indicator-font = 4

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%
ramp-signal-font = 3

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = ‚óã
ramp-signal-1 = ‚óî
ramp-signal-2 = ‚óë
ramp-signal-3 = ‚óï
ramp-signal-4 = ‚óè
;ramp-signal-foreground = ${colors.foreground-alt}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume>
label-font = 3

label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = üîá
label-muted-foreground = #aaa

; Only applies if <ramp-volume> is used
ramp-volume-0 = üîà
ramp-volume-0-foreground = #7bf2b8
ramp-volume-1 = üîâ
ramp-volume-1-foreground = #7bf2b8
ramp-volume-2 = üîä
ramp-volume-2-foreground = #7bf2b8

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging> | <bar-capacity>
format-charging-underline = #ffb52a

format-discharging = <label-discharging> | <bar-capacity>
format-discharging-underline = ${self.format-charging-underline}

format-full = <label-full> | <bar-capacity>
format-full-underline = #ffb52a

label-charging = %percentage%
label-discharging = %percentage%
label-full = %percentage%

bar-capacity-empty = ${pbars.empty}
bar-capacity-fill = ${pbars.fill}
bar-capacity-width = ${pbars.width}
bar-capacity-indicator = ${pbars.indicator}

bar-capacity-empty-font = 4
bar-capacity-fill-font = 4
bar-capacity-width-font = 4
bar-capacity-indicator-font = 4

[module/sp]
type = custom/script
interval = 86400
exec = echo " "
;format-underline = #e3ecf2
format-margin = 4

[module/date]
type = custom/script
interval = 2
exec = date "+%H:%M"
format-suffix = " | "
format-underline = #e3ecf2
label-font = 2

[module/daybar]
type = custom/script
exec = ~/.config/polybar/bin/daybar.sh
tail = true
click-left = kill -USR1 %pid%
format-underline = #e3ecf2
label-font = 4

[module/temp]
type = custom/script
exec = ~/.config/polybar/bin/temp.sh text 8
format-suffix = " | "
interval = 2
format-underline = #e3ecf2
label-font = 2

[module/tempbar]
type = custom/script
exec = ~/.config/polybar/bin/temp.sh bar 8
interval = 2
format-underline = #e3ecf2
label-font = 4

[module/wifi]
type = custom/script
exec = ~/.config/polybar/bin/wireless.sh text wlp58s0
format-suffix = " | "
interval = 5
format-underline = #e3ecf2
label-font = 2

[module/wifibar]
type = custom/script
exec = ~/.config/polybar/bin/wireless.sh bar wlp58s0
interval = 2
format-underline = #e3ecf2
label-font = 4

[module/vpn]
type = custom/script
exec = pgrep -x openvpn > /dev/null && echo " "
format-prefix = "üîí  "
format-prefix-foreground = #4bffdc
interval = 5
label-font = 3

[module/life]
type = custom/script
exec = echo " "
format-prefix = "üíö "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 86400
format-prefix-font = 5
label-padding-right = 3

[module/globe]
type = custom/script
exec = echo " "
format-prefix = "üåê "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 86400
format-prefix-font = 3
label-padding-right = 5

[module/lip]
type = custom/script
exec = ~/.config/polybar/bin/ip.sh lip wlp58s0
format-prefix = "LIP "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 5
label-font = 0

[module/wip]
type = custom/script
exec = ~/.config/polybar/bin/ip.sh wip wlp58s0
format-prefix = "WIP "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 60
label-font = 0

[module/dns]
type = custom/script
exec = ~/.config/polybar/bin/ip.sh dns wlp58s0
format-prefix = "DNS "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 5
label-font = 0

[module/tcpconn]
type = custom/script
exec = wc -l /proc/net/tcp | awk '{print $1}'
format-prefix = "CONN "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 5

[module/netrx]
type = custom/script
exec = ~/.config/polybar/bin/net.sh rx wlp58s0 5
format-prefix = "‚¨É "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 5
label-margin-right = 3

[module/nettx]
type = custom/script
exec = ~/.config/polybar/bin/net.sh tx wlp58s0 5
format-prefix = "‚¨Ä "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 5

[settings]
;format-margin = 2
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

