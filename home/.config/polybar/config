;

[colors]
background = #363737
background-alt = #11aaaaaa
foreground = #dfdfdf
foreground-alt = #87ffff
foreground-alt2 = #c2fff9
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[pbars]
empty = "‚óã "
fill = "‚óè "
width = 10
indicator = "‚óè "

[bar/main]
monitor = ${env:MONITOR:eDP1}
width = 43.5%
height = 40
offset-x = 0.2%
offset-y = 0.2%
radius = 2.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 2
padding-right = 2

border-bottom-size = 1
border-color = ${colors.background}

font-0 = "GE Inspira:pixelsize=14;1"
font-1 = "Symbola:pixelsize=25;2"
font-2 = "Symbola:pixelsize=10;2"
font-3 = "Symbola:pixelsize=21;2"
font-4 = "GE Inspira:pixelsize=16;1"

modules-left = life cpu sp memory sp wifi wifibar sp battery sp temp tempbar sp date daybar

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/cpu]
type = internal/cpu
interval = 1
format = <label> | <bar-load>
format-underline = #f90000
label = %percentage:2%

bar-load-empty = ${pbars.empty}
bar-load-fill = ${pbars.fill}
bar-load-width = ${pbars.width}
bar-load-indicator = ${pbars.indicator}

bar-load-empty-font = 3
bar-load-fill-font = 3
bar-load-width-font = 3
bar-load-indicator-font = 3

[module/memory]
type = internal/memory
interval = 1
format-underline = #4bffdc
label = %percentage_used%
format = <label> | <bar-used>

bar-used-empty = ${pbars.empty}
bar-used-fill = ${pbars.fill}
bar-used-width = ${pbars.width}
bar-used-indicator = ${pbars.indicator}

bar-used-empty-font = 3
bar-used-fill-font = 3
bar-used-width-font = 3
bar-used-indicator-font = 3

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume>
label-font = 3

label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = üîá
label-muted-foreground = #aaa

; Only applies if <ramp-volume> is used
ramp-volume-0 = üîà
ramp-volume-0-foreground = #7bf2b8
ramp-volume-1 = üîâ
ramp-volume-1-foreground = #7bf2b8
ramp-volume-2 = üîä
ramp-volume-2-foreground = #7bf2b8

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <label-charging> | <bar-capacity>
format-charging-underline = #ffb52a

format-discharging = <label-discharging> | <bar-capacity>
format-discharging-underline = ${self.format-charging-underline}

format-full = <label-full> | <bar-capacity>
format-full-underline = #ffb52a

label-charging = %percentage%
label-discharging = %percentage%
label-full = %percentage%

bar-capacity-empty = ${pbars.empty}
bar-capacity-fill = ${pbars.fill}
bar-capacity-width = ${pbars.width}
bar-capacity-indicator = ${pbars.indicator}

bar-capacity-empty-font = 3
bar-capacity-fill-font = 3
bar-capacity-width-font = 3
bar-capacity-indicator-font = 3

[module/sp]
type = custom/script
interval = 86400
exec = echo " "
;format-underline = #e3ecf2
format-margin = 4

[module/life]
type = custom/script
exec = echo " "
format-prefix = "üíö "
format-prefix-foreground = ${colors.foreground-alt2}
interval = 86400
format-prefix-font = 4
label-padding-right = 3

[module/temp]
type = custom/script
exec = ~/.config/polybar/bin/temp.sh text 8
format-suffix = " | "
interval = 2
format-underline = #e3ecf2

[module/tempbar]
type = custom/script
exec = ~/.config/polybar/bin/temp.sh bar 8
interval = 2
format-underline = #e3ecf2
label-font = 3

[module/wifi]
type = custom/script
exec = ~/.config/polybar/bin/wifi.sh text wlp58s0
format-suffix = " | "
interval = 5
format-underline = #e3ecf2

[module/wifibar]
type = custom/script
exec = ~/.config/polybar/bin/wifi.sh bar wlp58s0
interval = 2
format-underline = #e3ecf2
label-font = 3

[module/date]
type = custom/script
interval = 2
exec = date "+%H:%M"
format-suffix = " | "
format-underline = #e3ecf2

[module/daybar]
type = custom/script
exec = ~/.config/polybar/bin/daybar.sh 10
tail = true
click-left = kill -USR1 %pid%
format-underline = #e3ecf2
label-font = 3

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

