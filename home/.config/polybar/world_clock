background-alt = #444
foreground = #dfdfdf
foreground-alt = #b8f2ec
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/worldclock]
monitor = ${env:MONITOR:eDP-1}
width = 24.7%
height = 40
offset-x = 68.3%
offset-y = 0.1%
radius = 2.0
fixed-center = false
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

padding-left = 2
padding-right = 2

border-bottom-size = 1
border-color = ${colors.background}

font-0 = "GE Inspira:pixelsize=20;2"
font-1 = "Symbola:pixelsize=26;2"

modules-left = globe
modules-center = lax sp nyc sp lon sp sel

[module/sp]
type = custom/script
interval = 86400
exec = echo " "
;format-underline = #e3ecf2
format-margin = 2

[module/globe]
type = custom/script
exec = echo " "
format-prefix = "üåê"
format-prefix-foreground = #23d9ba
interval = 86400
format-prefix-font = 2

[module/lax]
type = custom/script
exec = TZ=America/Los_Angeles date +"%a  %H:%M"
interval = 5
format-prefix = "LAX  "
format-prefix-foreground = ${colors.foreground-alt}

[module/nyc]
type = custom/script
exec = TZ=America/New_York date +"%a  %H:%M"
interval = 5
format-prefix = "NYC  "
format-prefix-foreground = ${colors.foreground-alt}

[module/lon]
type = custom/script
exec = TZ=Europe/London date +"%a  %H:%M"
interval = 5
format-prefix = "LON  "
format-prefix-foreground = ${colors.foreground-alt}

[module/sel]
type = custom/script
exec = TZ=Asia/Seoul date +"%a  %H:%M"
interval = 5
format-prefix = "SEL  "
format-prefix-foreground = ${colors.foreground-alt}

